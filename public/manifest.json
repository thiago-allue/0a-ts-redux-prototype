/**
 * Example: Configure Web App Manifest in Create React App
 *
 * This file depicts a sample `manifest.json` configuration for a React application.
 * The metadata provided in JSON format customizes the application's appearance.
 * Elements like `name`, `short_name`, `icons`, etc, which influence how the
 * application is presented to the user, are defined in this manner.
 */
{
  // Represents the name for home screen icon
  "short_name": "React App",
  // Full name of the application
  "name": "Create React App Sample",
  // Defines app icons of different sizes and MIME types
  "icons": [
    {
      "src": "favicon.ico", // Path to icon file
      "sizes": "64x64 32x32 24x24 16x16", // Icon sizes
      "type": "image/x-icon" // MIME type of the icon
    },
    {
      "src": "logo192.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "logo512.png",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  // Default URL that opens when the app is launched
  "start_url": ".",
  // Display mode of the application
  "display": "standalone",
  // Theme color of the application
  "theme_color": "#000000",
  // Default background color of the application
  "background_color": "#ffffff"
}